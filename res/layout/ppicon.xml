
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tEnterExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/padding_medium"
        android:text="Enter Postfix Expression"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/Exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tEnterExp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text|numberSigned" >

        <requestFocus />
        <requestFocus />

    </EditText>

    <TextView
        android:id="@+id/tResType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Exp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding_medium"
        android:text="Select a Conversion" />

    <TextView
        android:id="@+id/tRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tResType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:hint="RESULT"
        android:padding="@dimen/padding_small" />

    <Button
        android:id="@+id/Post2Pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Exp"
        android:layout_below="@+id/tRes"
        android:layout_marginTop="26dp"
        android:text="Convert Postfix to Prefix" />

    <Button
        android:id="@+id/Post2In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Post2Pre"
        android:layout_alignRight="@+id/Post2Pre"
        android:layout_below="@+id/Post2Pre"
        android:text="Convert Postfix to Infix" />

</RelativeLayout>